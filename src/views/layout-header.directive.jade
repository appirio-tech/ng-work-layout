a.clean.logo("ng-home-link"=true, "href"="{{ vm.homeHref }}") ASP

ul.links
  li
    a(ui-sref="view-work-multiple") Dashboard

  li.projects
    button.clean(focus-on-click=true) Projects &dtrif; 

    ul.list
      li
        a(ui-sref="submit-work") Create New Project

      li(ng-repeat="project in vm.projects")
        a(ui-sref="timeline({ workId: project.id })") {{ project.name }}

  li(ng-hide="vm.loggedIn")
    a(ui-sref="login") Log in

  li(ng-show="vm.loggedIn")
    a.handle(ui-sref="view-work-multiple")
      avatar

  li.notifications(ng-show="vm.loggedIn")
    button.clean(type="button" focus-on-click=true)
      .notification(ng-show="vm.unreadCount > 0") {{ vm.unreadCount }}

    .popup.list
      threads(subscriber-id="{{ vm.subscriberId }}")

h1.app-name {{ vm.appName }}
